{
  "name": "oneclaw",
  "version": "0.1.0",
  "private": true,
  "description": "OneClaw desktop app â€” cross-platform Electron shell for openclaw",
  "main": "dist/main.js",

  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "electron .",
    "package:resources": "node scripts/package-resources.js",
    "dist:mac": "npm run package:resources && electron-builder --mac --arm64",
    "dist:mac:x64": "npm run package:resources -- --arch x64 && electron-builder --mac --x64",
    "dist:win:x64": "npm run package:resources -- --arch x64 && electron-builder --win --x64",
    "dist:win:arm64": "npm run package:resources -- --arch arm64 && electron-builder --win --arm64",
    "clean": "rm -rf dist resources/runtime resources/gateway out"
  },

  "dependencies": {
    "electron-updater": "^6.3.9"
  },

  "devDependencies": {
    "@types/node": "^22.15.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "typescript": "^5.9.3"
  },

  "engines": {
    "node": ">=22.12.0"
  }
}
